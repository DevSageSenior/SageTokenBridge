{
  "name": "ccip-starter-kit-hardhat",
  "scripts": {
    "generateTypes": "typechain --target ethers-v5 --out-dir typechain-types './abi/*.json'",

    "deployMockUSDT-sepolia": "npx hardhat run ./scripts/deployMockUSDT.js --network sepolia",
    "deployMockUSDC-sepolia": "npx hardhat run ./scripts/deployMockUSDC.js --network sepolia",
    "deployBridge-sepolia": "npx hardhat run ./scripts/deployBridge.js --network sepolia",
    "configBridge-sepolia": "npx hardhat run ./scripts/configBridge.js --network sepolia",
    "test-sepolia": "npx hardhat test ./test/Bridge.test.js --network sepolia",
    
    "deployMockUSDT-bscTestnet": "npx hardhat run ./scripts/deployMockUSDT.js --network bscTestnet",
    "deployMockUSDC-bscTestnet": "npx hardhat run ./scripts/deployMockUSDC.js --network bscTestnet",
    "deployBridge-bscTestnet": "npx hardhat run ./scripts/deployBridge.js --network bscTestnet",
    "configBridge-bscTestnet": "npx hardhat run ./scripts/configBridge.js --network bscTestnet",
    "test-bscTestnet": "npx hardhat test ./test/Bridge.test.js --network bscTestnet",

    "deployMockUSDT-arbitrumSepolia": "npx hardhat run ./scripts/deployMockUSDT.js --network arbitrumSepolia",
    "deployMockUSDC-arbitrumSepolia": "npx hardhat run ./scripts/deployMockUSDC.js --network arbitrumSepolia",
    "deployBridge-arbitrumSepolia": "npx hardhat run ./scripts/deployBridge.js --network arbitrumSepolia",
    "configBridge-arbitrumSepolia": "npx hardhat run ./scripts/configBridge.js --network arbitrumSepolia",
    "test-arbitrumSepolia": "npx hardhat test ./test/Bridge.test.js --network arbitrumSepolia",
    
    "deployMockUSDT-eth": "npx hardhat run ./scripts/deployMockUSDT.js --network mainnet",
    "deployMockUSDC-eth": "npx hardhat run ./scripts/deployMockUSDC.js --network mainnet",
    "deployBridge-eth": "npx hardhat run ./scripts/deployBridge.js --network mainnet",
    "configBridge-eth": "npx hardhat run ./scripts/configBridge.js --network mainnet",
    "test-eth": "npx hardhat test ./test/Bridge.test.js --network mainnet",
    
    "deployMockUSDT-bsc": "npx hardhat run ./scripts/deployMockUSDT.js --network bsc",
    "deployMockUSDC-bsc": "npx hardhat run ./scripts/deployMockUSDC.js --network bsc",
    "deployBridge-bsc": "npx hardhat run ./scripts/deployBridge.js --network bsc",
    "configBridge-bsc": "npx hardhat run ./scripts/configBridge.js --network bsc",
    "test-bsc": "npx hardhat test ./test/Bridge.test.js --network bsc"
